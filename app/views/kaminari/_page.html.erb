<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="inline-flex h-9 min-w-9 items-center justify-center rounded-md border bg-white text-gray-800 px-3 text-sm font-semibold shadow">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: page.rel,
      class: "inline-flex h-9 min-w-9 items-center justify-center rounded-md border bg-gray-200 text-gray-700 hover:bg-gray-300 px-3 text-sm" %>
<% end %>

