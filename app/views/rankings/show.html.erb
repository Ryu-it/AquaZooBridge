<%= render "shared/normal_header" %>
<div 
  data-controller="background"
  data-background-target="bg"
  data-background-sky-class="bg-sky-900"
  data-background-lime-class="bg-lime-900"
  class="p-12 w-full min-h-screen transition-colors duration-1000 bg-sky-900"
>
  <div class="mx-auto max-w-2xl px-4 pt-8 pb-16">
    <h1 class="text-center text-white text-2xl md:text-3xl font-semibold">
      人気投稿ランキング
    </h1>

    <div class="mt-8 space-y-10">
      <% @rankings.each_with_index do |ranking, i| %>
        <div class="mx-auto max-w-xl bg-white rounded-xl shadow-md p-5 md:p-6
                    flex items-center justify-between">
          <div class="text-gray-800 text-lg md:text-xl font-semibold">
          <%= i + 1 %>位：<%= ranking.name %>
          </div>
          <div class="text-gray-700 text-lg md:text-xl font-mono">
            <%= ranking.likes_count %>件
          </div>
        </div>
      <% end %>

      <% if @rankings.blank? %>
        <div class="text-center text-white/90">データがありません</div>
      <% end %>
    </div>
  </div>
</div>
