<%= render "shared/normal_header" %>

<% if resource.errors.any? %>
  <div class="text-center border px-4 py-3 rounded-md shadow-md bg-red-300 border-red-400 text-red-700">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div 
  data-controller="background"
  data-background-target="bg"
  data-background-sky-class="bg-sky-900"
  data-background-lime-class="bg-lime-900"
  class="w-full h-screen transition-colors duration-1000 bg-sky-900"
>
<div class = "flex items-center justify-center h-full min-h-screen text-white">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

<div class = "flex flex-col space-y-8">

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "username", class: "border rounded-xl py-4 px-12" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded-xl py-4 px-12 mb-8" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border rounded-xl py-4 px-12 mb-8" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded-xl py-4 px-12 mb-8" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "border rounded-xl py-4 px-12" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "border rounded-xl px-6 py-4 bg-neutral-300 text-black" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<%#= これはアカウント削除のボタン %>
<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%#= link_to "Back", :back %>
</div>
</div>
</div>
