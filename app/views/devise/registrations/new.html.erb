<%= render "shared/normal_header" %>

<% if resource.errors.any? %>
  <div class="text-center border px-4 py-3 rounded-md shadow-md bg-red-300 border-red-400 text-red-700">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div 
  data-controller="background"
  data-background-target="bg"
  data-background-sky-class="bg-sky-900"
  data-background-lime-class="bg-lime-900"
  class="w-full h-screen transition-colors duration-1000 bg-sky-900"
>

<div class = "flex items-center justify-center h-full min-h-screen">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class = "flex-col space-y-8">
  <div class="field">
    <%= f.label :name, class: "text-white" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "username", class: "bg-white border rounded-xl py-4 px-12" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "text-white" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border bg-white rounded-xl py-4 px-12" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-white" %>
    <% if @minimum_password_length %>
    <em class = "text-white" >(<%= @minimum_password_length %> 以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border bg-white rounded-xl py-4 px-12"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "text-white" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border bg-white rounded-xl py-4 px-12"  %>
  </div>

  <div class="actions">
    <%# あとでi18nに直す%>
    <%= f.submit "登録", class: "border rounded-xl px-6 py-4 bg-neutral-300 text-black" %>
  </div>
<% end %>

  <!-- 棒線 -->
<div class="my-4 border-t border-gray-400"></div>
<%# Googleの登録ボタン %>
<% if devise_mapping.omniauthable? && resource_class.omniauth_providers.include?(:google_oauth2) %>
  <div class="mt-6">
    <%= button_to "Googleでログイン",
      user_google_oauth2_omniauth_authorize_path,  # ← routes から自動生成されるpath
      method: :post,
      data: { turbo: false },
      class: "text-black w-full items-center justify-center gap-2 rounded-xl border px-4 py-3 bg-neutral-300" %>
  </div>
  <% end %>
</div>
</div>
</div>