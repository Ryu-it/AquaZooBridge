<%= render "shared/normal_header" %>
<%= render "shared/flash_message" %>
<div 
  data-controller="background"
  data-background-target="bg"
  data-background-sky-class="bg-sky-900"
  data-background-lime-class="bg-lime-900"
  class="p-12 w-full min-h-screen transition-colors duration-1000 bg-sky-900"
>
<!-- 余白：スマホでは左右に少し、PCは中央寄せ -->
  <div class="min-h-screen mx-auto max-w-5xl px-4">

    <%= render "homes/guide" %>

    <!-- スマホ: 縦 / PC: 横 -->
    <div class="flex flex-col items-stretch justify-center gap-12 py-14 md:flex-row md:items-center md:gap-30">

      <!-- 動物園 -->
      <%= link_to posts_path(category: "zoo"),
          class: "text-white block border rounded-xl bg-amber-700 text-center text-xl md:text-3xl
                  px-6 py-8 md:px-20 md:py-20 shadow-sm hover:opacity-90 focus:outline-none focus:ring" do %>
        動物園に行く
      <% end %>

      <!-- 水族館 -->
      <%= link_to posts_path(category: "aqua"),
          class: "block border rounded-xl bg-sky-300 text-center text-xl md:text-3xl
                  px-6 py-8 md:px-20 md:py-20 shadow-sm hover:opacity-90 focus:outline-none focus:ring" do %>
        水族館に行く
      <% end %>
    </div>
  </div>
</div>