<%= turbo_frame_tag dom_id(post, :like_button) do %>
  <% if user_signed_in? %>
    <%= link_to likes_path(post_id: post.id),
        data: { turbo_method: :post },
        class: (current_user.like?(post) ? "text-red-500" : "text-white") do %>
      <i class="fa-solid fa-heart text-2xl mt-6"></i>
    <% end %>
  <% end %>
<% end %>
