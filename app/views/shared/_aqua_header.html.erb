<header>
<div class="text-xl flex p-8 justify-between items-center bg-sky-300">
  <div>
  <%= link_to root_path do %>
  <i class="fa-solid fa-house text-2xl"></i>
  <% end %>
  </div>
  <% if current_user %>
  <div class="flex">
    <%#　stimulusでクリックした時に投稿を表示 %>
    <div data-controller="toggle" class="relative">
      <button data-action="click->toggle#toggle" class="text-black cursor-pointer">
        <i class="fa-solid fa-pen text-2xl"></i>
      </button>
      <div data-toggle-target="menu" class="absolute mt-8 w-60 bg-yellow-100 text-black rounded shadow-lg hidden">
        <%= link_to "動物園を投稿する", new_post_path(category: "zoo"), class: "block px-4 py-2 hover:bg-gray-100" %>
        <%= link_to "水族館を投稿する", new_post_path(category: "aqua"), class: "block px-4 py-2 hover:bg-gray-100" %>
      </div>
    </div>
  </div>
    <%= link_to notifications_path do %>
      <i class="fa-solid fa-bell text-2xl"></i>
      <% if @unread_notifications_count > 0 %>
        <span class=""><%= @unread_notifications_count %></span>
      <% end %>
    <% end %>
<div data-controller="hamburger" class="relative">
  <!-- ハンバーガーアイコン -->
  <button data-action="click->hamburger#toggle" class="p-2 cursor-pointer">
    <!-- 三本線アイコン -->
    <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2"
         viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>
    <div data-hamburger-target="menu" class="absolute mt-2 right-0 w-60 bg-yellow-100 rounded shadow-lg hidden">
      <%= link_to "水族館に行く", posts_path(category: "aqua"), class: "block px-4 py-2 hover:bg-gray-100" %>
      <%= link_to "動物園に行く", posts_path(category: "zoo"), class: "block px-4 py-2 hover:bg-gray-100" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "block px-4 py-2 hover:bg-gray-100" %>
      <%= link_to "マイページ", profile_path, class: "block px-4 py-2 hover:bg-gray-100" %>
      <%= link_to "ランキング", ranking_path, class: "block px-4 py-2 hover:bg-gray-100" %>
  </div>
</div>

  <% else %>
  <div class="flex space-x-4">
    <div>
      <%= link_to "館員登録", "/users/sign_up" %>
    </div>
    <div>
      <%= link_to "ログイン", new_user_session_path %>
    </div>
  </div>
  <% end %>
</div>
</header>
